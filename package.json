{
	"name": "gitmarker",
	"displayName": "GitMarker",
	"description": "Bookmarking GitHub repositories",
	"version": "1.0.0",
	"publisher": "Falberthen",
	"license": "SEE LICENSE IN LICENSE.txt",
	"repository": {
		"type": "git",
		"url": "https://github.com/falberthen/GitMarker.git"
	},
	"icon": "resources/gitmarker.png",
	"homepage": "https://github.com/falberthen/GitMarker/blob/master/README.md",
	"engines": {
		"vscode": "^1.58.0"
	},
	"activationEvents": [
		"onCommand:extension.createCategory",
		"onView:gitmarkerView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "gitmarker.createCategory",
				"title": "Create category",
				"category": "GitMarker",
				"icon": {
					"light": "resources/add.svg",
					"dark": "resources/add.svg"
				}
			},
			{
				"command": "gitmarker.renameCategory",
				"title": "Rename category",
				"category": "GitMarker",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "gitmarker.removeCategory",
				"title": "Remove category",
				"category": "GitMarker",
				"icon": {
					"light": "resources/delete.svg",
					"dark": "resources/delete.svg"
				}
			},
			{
				"command": "gitmarker.searchRepositories",
				"title": "Search repositories on GitHub",
				"category": "GitMarker",
				"icon": {
					"light": "resources/light/search.svg",
					"dark": "resources/dark/search.svg"
				}
			},
			{
				"command": "gitmarker.removeRepository",
				"title": "Remove repository",
				"category": "GitMarker",
				"icon": {
					"light": "resources/delete.svg",
					"dark": "resources/delete.svg"
				}
			},
			{
				"command": "gitmarker.syncRepository",
				"title": "Sync repository",
				"category": "GitMarker",
				"icon": {
					"light": "resources/refresh.svg",
					"dark": "resources/refresh.svg"
				}
			},
			{
				"command": "gitmarker.howToSetupToken",
				"title": "❔ How to setup GitHub personal access token?",
				"category": "GitMarker"
			},
			{
				"command": "gitmarker.setAccessToken",
				"title": "⚙️ Setup GitHub personal access token",
				"category": "GitMarker"
			},
			{
				"command": "gitmarker.importBookmarks",
				"title": "📑 Import bookmarks",
				"category": "GitMarker"
			},
			{
				"command": "gitmarker.exportBookmarks",
				"title": "⛏️ Export bookmarks",
				"category": "GitMarker"
			},
			{
				"command": "gitmarker.clearAll",
				"title": "❌ Clear all categories",
				"category": "GitMarker"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "gitmarker.removeCategory",
					"when": "false"
				},
				{
					"command": "gitmarker.renameCategory",
					"when": "false"
				},
				{
					"command": "gitmarker.syncRepository",
					"when": "false"
				},
				{
					"command": "gitmarker.removeRepository",
					"when": "false"
				},
				{
					"command": "gitmarker.exportBookmarks",
					"when": "view == gitmarkerView && categoryCount > 0"
				}
			],
			"view/title": [
				{
					"command": "gitmarker.searchRepositories",
					"when": "view == gitmarkerView && categoryCount > 0",
					"group": "navigation@0"
				},
				{
					"command": "gitmarker.createCategory",
					"when": "view == gitmarkerView",
					"group": "navigation@1"
				},
				{
					"command": "gitmarker.importBookmarks",
					"when": "view == gitmarkerView",
					"group": "group@0"
				},
				{
					"command": "gitmarker.exportBookmarks",
					"when": "view == gitmarkerView && categoryCount > 0",
					"group": "group@1"
				},
				{
					"command": "gitmarker.clearAll",
					"when": "view == gitmarkerView && categoryCount > 0",
					"group": "group@2"
				},
				{
					"command": "gitmarker.setAccessToken",
					"when": "view == gitmarkerView",
					"group": "group@3"
				},
				{
					"command": "gitmarker.howToSetupToken",
					"when": "view == gitmarkerView",
					"group": "inline@0"
				}
			],
			"view/item/context": [
				{
					"command": "gitmarker.renameCategory",
					"group": "inline@0",
					"when": "viewItem == categoryItem"
				},
				{
					"command": "gitmarker.removeCategory",
					"group": "inline@1",
					"when": "viewItem == categoryItem"
				},
				{
					"command": "gitmarker.syncRepository",
					"group": "inline@2",
					"when": "viewItem == repositoryItem"
				},
				{
					"command": "gitmarker.removeRepository",
					"group": "inline@3",
					"when": "viewItem == repositoryItem"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "gitmarker",
					"title": "GitMarker",
					"icon": "resources/gitmarker.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "gitmarkerView",
				"contents": "Let's create the first category for your bookmarks!\n\n[Create category](command:gitmarker.createCategory)\n[📑Import bookmarks](command:gitmarker.importBookmarks)",
				"when": "categoryCount == 0"
			}
		],
		"views": {
			"gitmarker": [
				{
					"id": "gitmarkerView",
					"name": "",
					"contextualTitle": "Favorite Repositories"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/luxon": "^1.27.1",
		"@types/mocha": "^8.2.2",
		"@types/node": "^14.17.9",
		"@types/vscode": "^1.58.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"luxon": "^2.0.2"
	}
}
