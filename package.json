{
	"name": "gitmarker",
	"displayName": "GitMarker",
	"description": "Easing bookmarking GitHub repositories.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:gitmarker.searchRepositories",
		"onView:gitmarkerView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "gitmarker.createCategory",
				"title": "Create Category",
				"category": "GitMarker"
			},
			{
				"command": "gitmarker.searchRepositories",
				"title": "Search Repositories",
				"category": "GitMarker"
			},
			{
				"command": "gitmarker.addBookmark",
				"title": "Add bookmark",
				"category": "GitMarker",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "gitmarker.editBookmark",
				"title": "Edit",
				"category": "GitMarker",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "gitmarker.deleteBookmark",
				"title": "Delete",
				"category": "GitMarker",
				"icon": {
					"light": "resources/light/delete.svg",
					"dark": "resources/dark/delete.svg"
				}
			},
			{
				"command": "gitmarker.setAccessToken",
				"title": "Set Access Token",
				"category": "GitMarker"
			},
			{
				"command": "gitmarker.clearAll",
				"title": "Remove All",
				"category": "GitMarker"
			}
		],
		"menus": {
			"view/title": [			
				{
					"command": "gitmarker.setAccessToken",
					"when": "view == gitmarkerView"
				},
				{
					"command": "gitmarker.createCategory",
					"when": "view == gitmarkerView"
				},
				{
					"command": "gitmarker.clearAll",
					"when": "view == gitmarkerView"
				}
			],
			"view/item/context": [
				{
					"command": "gitmarker.searchRepositories",
					"group": "inline",
					"when": "viewItem == categoryItem"
				},
				{
					"command": "gitmarker.editBookmark",
					"group": "inline",
					"when": "viewItem == treeItem"
				},
				{
					"command": "gitmarker.deleteBookmark",
					"group": "inline",
					"when": "viewItem == treeItem"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "gitmarker",
					"title": "GitMarker",
					"icon": "resources/gitmarker.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "gitmarkerView",
				"contents": "Let's create a category for your bookmarks.\n[Create category](command:gitmarker.createCategory)"
			}
		],
		"views": {
			"gitmarker": [
				{
					"id": "gitmarkerView",
					"name": "My Favorite Repositories",
					"contextualTitle": "Favorite Repositories"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.58.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"axios": "^0.21.1"
	}
}
